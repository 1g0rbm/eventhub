{
  "name": "1g0rbm/eventhub",
  "type": "project",
  "authors": [
    {
      "name": "1g0rbm",
      "email": "m1g0rb89@gmail.com"
    }
  ],
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "require": {
    "php": "^7.4",
    "ext-json": "^7.4",
    "php-di/php-di": "^6.2",
    "slim/psr7": "^1.2",
    "slim/slim": "^4.5",
    "symfony/console": "^5.1"
  },
  "require-dev": {
    "overtrue/phplint": "^2.0",
    "phpunit/phpunit": "^9.3",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.5",
    "vimeo/psalm": "^3.15"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests"
    }
  },
  "scripts": {
    "lint": "phplint",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "cli": "php bin/cli.php --ansi",
    "psalm": "psalm",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-html var/coverage"
  }
}
